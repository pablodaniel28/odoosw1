<odoo>
  <data>
     <record model="ir.ui.view" id="colegio.modalidad_gestion_index">
      <field name="name">colegio modalidad_gestion list</field>
      <field name="model">colegio.modalidad_gestion</field>
      <field name="arch" type="xml">

        <tree>
          <field name="nombre" />
          

        </tree>
      </field>
    </record> 

    <!-- Vista de Formulario -->
     <record id="colegio.modalidad_gestion_create" model="ir.ui.view">
      <field name="name">colegio gestion form</field>
      <field name="model">colegio.modalidad_gestion</field>
      <field name="arch" type="xml">
        <form string="modalidadgestionform">
          <sheet>
            <group>
              <field name="nombre" />
              
            </group>
            
          </sheet>
        </form>
      </field>
    </record> 

    <record model="ir.actions.act_window" id="colegio.action_modalidad_gestion_window">
      <!-- name es el texto que aparece al lado del nuevo  -->
      <field name="name">PERIODOS ACADEMICOS</field>
      <field name="res_model">colegio.modalidad_gestion</field>
      
    </record>

 
  </data>
</odoo>